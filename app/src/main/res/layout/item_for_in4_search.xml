<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3">

        <TableRow
            android:background="@color/tb_grey"
            android:divider="@color/grey"
            android:showDividers="middle">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Lương Thị Thu Hương"
                android:textSize="8sp"
                android:padding="5dp"
                android:gravity="left"
                android:id="@+id/item_search_info"
                android:background="@drawable/cell1"
                android:fontFamily="@font/merriweathersanswght"/>

            <TextView
                android:id="@+id/item_search_class_id"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="INT3120 50"
                android:textSize="8sp"
                android:background="@drawable/cell4"
                android:fontFamily="@font/merriweathersanswght"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_column="1"
                android:textSize="8sp"
                android:text="Phát triển ứng dụng di động"
                android:id="@+id/item_search_class_name"
                android:gravity="left"
                android:background="@drawable/cell3"
                android:fontFamily="@font/merriweathersanswght" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="3"
                android:textSize="8sp"
                android:id="@+id/item_search_portal_number"
                android:gravity="center"
                android:background="@drawable/cell5"
                android:fontFamily="@font/merriweathersanswght"/>

        </TableRow>


</TableLayout>