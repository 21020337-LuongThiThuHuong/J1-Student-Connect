<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rqAdd"
    tools:context=".request.RequestAdd"
    android:background="@color/bg_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/request_toolbar"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/bg_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/add_request_bar"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_top_cardview">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/add_request"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Tạo yêu cầu"
                    android:textSize="20sp"
                    android:fontFamily="@font/merriweathersanswght"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_handing_bar"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/add_request_bar">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:src="@drawable/handling" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/merriweathersanswght"
                    android:text="Trạng thái xử lý yêu cầu"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:layout_below="@+id/request_toolbar"
        android:layout_alignBottom="@+id/bottom_navigation"
        android:layout_marginBottom="85dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/InfoAddRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/karmamedium"
                android:gravity="center_vertical"
                android:text="Họ tên SV: Mikasa Ackerman\nMSSV: 21020337"
                android:textSize="16dp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/card_study_results"
                    android:layout_row="0"
                    android:layout_column="0">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="101dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/provideresult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="66dp"
                            android:padding="10dp"
                            android:text="CẤP BẢNG ĐIỂM" />


                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/provideresult"
                            android:src="@drawable/a_plus" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:id="@+id/card_postpone"
                    android:layout_column="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/postponerequest"
                            android:layout_width="130dp"
                            android:layout_height="41dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="159dp"
                            android:padding="10dp"
                            android:text="ĐỀ NGHỊ HOÃN THI" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/postponerequest" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:id="@+id/card_review"
                    android:layout_column="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reviewrequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="95dp"
                            android:layout_marginBottom="66dp"
                            android:padding="10dp"
                            android:text="XEM LẠI BÀI THI" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/reviewrequest" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:id="@+id/card_student_card"
                    android:layout_height="200dp"
                    android:layout_row="1"
                    android:layout_column="0">

                    <RelativeLayout
                        android:layout_width="119dp"
                        android:layout_height="101dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/studentcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="66dp"
                            android:padding="10dp"
                            android:text="CẤP LẠI THẺ SINH VIÊN" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/studentcard" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/card_bus_request"
                    android:layout_row="1"
                    android:layout_column="1">

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="101dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/busrequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="66dp"
                            android:padding="10dp"
                            android:text="ĐỀ NGHỊ LÀM VÉ XE BUS" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/busrequest" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/card_stop_learning"
                    android:layout_row="1"
                    android:layout_column="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="101dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/stoplearning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="66dp"
                            android:padding="10dp"
                            android:text="XIN THÔI HỌC" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/stoplearning" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/card_degree_request"
                    android:layout_row="2"
                    android:layout_column="0">

                    <RelativeLayout
                        android:layout_width="119dp"
                        android:layout_height="146dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qualification"
                            android:layout_width="match_parent"
                            android:layout_height="89dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:padding="10dp"
                            android:text="CẤP CHỨNG CHỈ TỐT NGHIỆP TẠM THỜI" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/qualification" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/add_request_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:layout_marginBottom="110dp"-->
<!--        android:src="@drawable/add"-->
<!--        android:backgroundTint="@color/bg_blue"/>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/RequestHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/grey_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/arialnb"
                    android:text="Trang chủ"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/RequestSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/search_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/arialnb"
                    android:text="Tra cứu"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/RequestProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:src="@drawable/profile_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/arialnb"
                    android:text="Hồ sơ"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>