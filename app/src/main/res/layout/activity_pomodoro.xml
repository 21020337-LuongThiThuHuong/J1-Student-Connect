<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutPomodoro"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:background="@color/yellow"
            android:text="1 / 4"
            android:padding="20dp"
            android:id="@+id/RoundCount"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Tập trung học bài nào !!!"
            android:id="@+id/TitlePomodoro"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#92000000"
            android:layout_marginBottom="10dp"
            android:text="25:00"
            android:textSize="100sp" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/main_green"
            android:text="Vào bàn học thôi !!" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/main_green"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="15:00"
                android:layout_marginRight="100dp"
                android:id="@+id/quaterAnHour"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/main_green"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="30:00"
                android:id="@+id/halfAnHour"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
