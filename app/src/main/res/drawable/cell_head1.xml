<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#000000" /> <!-- Màu bóng của dialog -->
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"> <!-- Dịch nội dung xuống dưới 8dp để tạo hiệu ứng bóng -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="3dp"/>
            <gradient
                android:startColor="@color/bg_blue"
                android:endColor="#70C8F6"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>
