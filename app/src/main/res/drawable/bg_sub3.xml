<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#4CAF50"
                android:endColor="#80FFFFFF"
                android:type="linear"
                android:angle="45"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="3dp"> <!-- Dịch nội dung xuống dưới 8dp để tạo hiệu ứng bóng -->
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#009688" />
            <solid android:color="#FFFFFFFF" /> <!-- Màu nền của dialog -->
        </shape>
    </item>
</layer-list>
